<style type="text/css">
#animate1 {
	transition: transform 0.5s ease-out;
}
.zap {
	transform: translate(0, 50px) scale(2.5, 2.5);
  opacity: 0.5;
}
</style>

<script>
	// build scene
	var scene = new ScrollMagic.Scene({triggerElement: "#trigger1"})
